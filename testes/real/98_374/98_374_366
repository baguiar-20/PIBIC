#include <stdio.h>

int main() {
	int matriz[100][100];
	int i, j, linha=0, coluna=0, n, m, menor;
	
	scanf("%d %d", &n, &m);
	for (i=0;i<n;i++)
		for (j=0;j<m;j++)
			scanf("%d",&matriz[i][j]);

	menor = matriz[0][0];
	for (i=0;i<n;i++)
		for (j=0;j<m;j++)
			if (matriz[i][j]<menor) {
				menor = matriz[i][j];
				linha = i;
				coluna = j;
			}
	printf("%d %d %d\n", linha, coluna, menor);
	
	return 0;
}
