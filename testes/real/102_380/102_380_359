#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main(){
 
 char vet[100];
 int i;



 printf("Nome: ");
 fgets(vet,100,stdin);
 vet[strlen(vet)-1] = '\0';
 
 printf("Inverso: ");
 i = 0;

 while (vet[i] != '\0'){
        printf("%c", vet[strlen(vet)-1-i]);
        i ++;
 }
      
 printf("\n");
     

 
 




 return 0;
}
