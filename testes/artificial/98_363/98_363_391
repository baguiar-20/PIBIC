#include <stdio.h>
#include <string.h>
int main(){

	int vdip = 0, gzdh = 0;
	char hjgf[100];

	printf("Numeros: ");

	for(;(scanf("%d", &vdip) == 1);){
		hjgf[gzdh] = vdip;	
		gzdh++;
	}

	getchar();

	printf("Inverso:");
	for(gzdh = strlen(hjgf)-1; gzdh >= 0; gzdh--) printf(" %d", hjgf[gzdh]);
	printf("\n");
}
