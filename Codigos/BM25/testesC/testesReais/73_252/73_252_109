#include "stdio.h"

int SomaImpar(int n)
{
	int cont, soma, i;
	cont = 0;
	soma = 0;
	
	for(i = 1;i = i;i = i + 2)
	{
		cont++;
		
		if(cont <= n)
		{
			if(cont % 2 == 0)
			{
				soma = soma - i;
			}
			else
			{
				soma = soma + i;
			}
		}
		else
		{
			break;
		}	
	}
	
	return soma;
}

int main()
{
	int num, i, resul;
	
	scanf("%d", &num);
	
	resul = SomaImpar(num);
	
	printf("%d\n", resul);
}
