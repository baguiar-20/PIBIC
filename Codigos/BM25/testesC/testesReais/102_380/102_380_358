#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
  char nome[100];
  int i;
  int tam;

  printf("Nome: ");
  fgets(nome, 100, stdin);

  printf("Inverso: ");

  tam = strlen(nome) - 2;

  for (i = tam; i != -1; i--) {
      printf("%c", nome[i]);  
  }
  printf("\n");
  return 0;
}
