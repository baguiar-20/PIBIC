#include <ctype.h> 
#include <stdio.h> 
#include <string.h> 
int main()
{
	char mensagem[100];
	int i,a; 

	printf("Nome: ");
	fgets(mensagem, 100, stdin);
	mensagem[strlen(mensagem)-1] = '\0';
	a=strlen(mensagem)-1;
	printf("Inverso: ");
	for(i=a;i>=0;i--){
		printf("%c", mensagem[i]);
	}
printf("\n");
return 0;
} 
