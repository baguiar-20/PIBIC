//Escrever um algoritmo que lê 2 vetores de tamanho 10. Crie, a seguir, um vetor S de 20 posiçõesque contenha os elementos dos outros 2 vetores em ordem crescente.
//Obs.: copie primeiro os valores para o vetor S para depois ordená-los.

#include<stdio.h>

int main()
{
    int a[10], b[10], s[20], i, aux, j;

    for(i=0;i<10;i++) scanf("%d",&a[i]);

    for(i=0;i<10;i++) scanf("%d",&b[i]);

    for(i=0;i<10;i++) s[i] = a[i];

    aux = 0;

    for(i = 10; i < 20; i++)
    {
        for(j=0;j<10;j++) {s[i] = b [aux];}
        aux++;
    }


    for(i = 0; i < 20; i++)
    {
        for(j=0;j<20;j++)
            {
                if(s[i]<s[j])
                {
                    aux = s[i];
                    s[i] = s[j];
                    s[j] = aux;
                }
            }

    }


     for(i=0;i<20;i++) printf(" %d ",s[i]);

    return 0;

}
