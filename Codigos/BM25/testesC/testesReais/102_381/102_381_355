#include <stdio.h>
#include <string.h>
#define TAM_MAX 100
int main(){
	float vetor[TAM_MAX][4];
	float n1, n2, n3, n4;
	int j,i = 0;
	float med=0;
	while (scanf("%f %f %f %f", &n1, &n2, &n3, &n4) == 4) {
    vetor[i][0] = n1;
    vetor[i][1] = n2;
    vetor[i][2] = n3;
    vetor[i][3] = n4;
    i++; 
    if ((n1+n2+n3+n3)>=med){
		med=(n1+n2+n3+n4)/4;
		j=i;}
     
	}
	printf("%.3f do aluno %d\n", med, j);
	return 0;
}
